<Layout title="Mis Proyectos">
  <BackButton />
  <div class="projects-container">
    <h2>Proyectos.</h2>
    <div class="projects-grid">
      {proyectos.map((proyecto) => (
        <article class="project-card">
          <div class="project-icon">
            <i class={proyecto.icon}></i>
          </div>
          <div class="project-content">
            <header>
              <h2>{proyecto.titulo}</h2>
              <div class="project-meta">
                <span class="empresa">{proyecto.empresa}</span>
                <span class="periodo">{proyecto.periodo}</span>
              </div>
            </header>
            <p class="descripcion">{proyecto.descripcion}</p>
            {proyecto.tecnologias && (
              <div class="tecnologias">
                <h3>Tecnologías utilizadas:</h3>
                <div class="tech-tags">
                  {proyecto.tecnologias.map((tech) => (
                    <span class="tech-tag">{tech}</span>
                  ))}
                </div>
              </div>
            )}
          </div>
        </article>
      ))}
    </div>
  </div>
</Layout>

<style>
  .projects-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  h1 {
    text-align: center;
    margin-bottom: 3rem;
    font-size: 2.5rem;
  }

  .projects-grid {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .project-card {
    border: 2px solid var(--text-primary);
    padding: 2rem;
    display: flex;
    gap: 2rem;
    transition: transform 0.3s ease;
    margin-top: 2rem;
  }

  .project-card:hover {
    transform: translateY(-5px);
  }

  .project-icon {
    flex-shrink: 0;
    font-size: 2.5rem;
    color: var(--icons);
    width: 60px;
    text-align: center;
  }

  .project-content {
    flex-grow: 1;
  }

  .project-content h2 {
    color: var(--text-primary);
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .project-meta {
    display: flex;
    gap: 1rem;
    margin-bottom: 1rem;
    font-size: 0.9rem;
  }

  .empresa {
    color: var(--icons);
  }

  .periodo {
    color: var(--text-secondary);
  }

  .descripcion {
    color: var(--text-primary);
    line-height: 1.6;
    margin-bottom: 1.5rem;
    text-align: justify;
  }

  .tecnologias h3 {
    color: var(--icons);
    font-size: 1rem;
    margin-bottom: 0.5rem;
  }

  .tech-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tech-tag {
    background-color: #c63f3e;
    color: var(--text-invert);
    padding: 0.25rem 0.75rem;
    font-size: 0.875rem;
  }

  @media (max-width: 768px) {
    .projects-container {
      padding: 1rem;
    }

    .project-card {
      flex-direction: column;
      padding: 2rem;
      gap: 1rem;
    }

    .project-icon {
      width: auto;
      text-align: left;
    }

    .project-meta {
      flex-direction: column;
      gap: 0.25rem;
    }

    .project-card:hover {
      transform: none;
    }
  }
</style>