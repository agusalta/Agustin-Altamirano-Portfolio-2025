import Layout from '../../layouts/Layout.astro';
import BackButton from '../../components/BackButton.astro';

const proyectos = [
  {
    titulo: "CALCULADORA Y MANUAL DE TUBOS DE COBRE",
    empresa: "Copper Development Association Inc.",
    periodo: "Ago. 2023 – Nov. 2023",
    descripcion: "Esta página se centró en la creación de un manual de instrucciones y una calculadora especializada para el dimensionamiento de tubos de cobre. Diseñados específicamente para profesionales de la industria, como fontaneros, contratistas de calefacción e ingenieros, estos recursos son una herramienta esencial para la planificación y diseño de sistemas de rociadores contra incendios, plomería y calefacción solar.",
    tecnologias: ["HTML", "CSS", "JavaScript"],
    icon: "fa-solid fa-calculator",
  },
  {
    titulo: "SISTEMA DE GESTIÓN MUNICIPAL",
    empresa: "Municipalidad de San Isidro",
    periodo: "Ene. 2024 – Dic. 2024",
    descripcion: "Este sistema fue desarrollado para optimizar la gestión administrativa de la Municipalidad de San Isidro. Entre sus principales funcionalidades se incluyeron el manejo del presentismo, la gestión de viáticos y la administración de empleados según sus roles administrativos. Diseñado para mejorar la eficiencia operativa, este sistema permitió una mejor organización y control de los recursos municipales.",
    tecnologias: ["React", "Next.js", "Tailwind CSS", "Node.js", "NestJS", "TypeORM", "SQL", "Jira"],
    icon: "fa-solid fa-building-columns",
  },
  {
    titulo: "CARDIOSYS – SISTEMA DE GESTIÓN MÉDICA",
    empresa: "Pinamed",
    periodo: "Ene. 2025 – Actualidad",
    descripcion: "CardioSys es un sistema especializado en la gestión de consultorios médicos, diseñado para facilitar el manejo de pacientes y su historial clínico. Incluye funcionalidades avanzadas como la administración de archivos médicos, la generación de reportes en formato PDF y un sistema seguro para la gestión de datos clínicos. Este software ha sido una herramienta clave para mejorar la organización y eficiencia en la atención médica, garantizando un acceso rápido y seguro a la información de los pacientes.",
    tecnologias: ["React", "Next.js", "Tailwind CSS", "Node.js", "NestJS", "SQL", "Shadcn UI", "Figma", "Railway", "Vercel"],
    icon: "fa-solid fa-heart-pulse",
  },
];
