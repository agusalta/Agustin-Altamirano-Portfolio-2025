---
import Layout from "../layouts/Layout.astro";
import BackButton from '../components/BackButton.astro';
---

<Layout>
  <div class="flex items-center justify-center min-h-screen w-full p-8" transition:name="contacto">
    <BackButton />
    <div class="contact-container">
      <div class="contact-header">
        <h2>Contacto</h2>
      </div>    
      
      <form 
        class="contact-form" 
        action="https://formspree.io/f/mpwqggyr" 
        method="POST"
      >
        <div class="form-group">
          <input 
            type="text" 
            name="nombre" 
            placeholder="Nombre"
            required
            class="form-input"
          />
        </div>
        
        <div class="form-group">
          <input 
            type="email" 
            name="email" 
            placeholder="Email"
            required
            class="form-input"
          />
        </div>
        
        <div class="form-group">
          <textarea 
            name="mensaje" 
            placeholder="Mensaje"
            required
            class="form-input"
            rows="4"
          ></textarea>
        </div>
        
        <button type="submit" class="submit-btn">
          Enviar mensaje
        </button>
      </form>

      <div class="contact-info">
        <div class="social-links">
          <div class="info-item">
            <a href="https://www.linkedin.com/in/agust%C3%ADn-altamirano-a61400167/" target="_blank" rel="noopener noreferrer">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" class="contact-icon">
                <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
              </svg>
              <p class="text-sm">LinkedIn</p>
            </a>
          </div>
          <div class="info-item">
            <a href="https://github.com/agusalta" target="_blank" rel="noopener noreferrer">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" class="contact-icon">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
              <p class="text-sm">GitHub</p>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  .contact-container {
    width: 100%;
    max-width: 600px;
    border: 2px solid var(--text-primary);
    padding: 2rem;
    transition: all 0.3s ease;

  }

  .contact-header h1 {
    font-size: 2.5rem;
    margin-bottom: 2rem;
  }

  .contact-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .form-group {
    width: 100%;
  }

  .form-input {
    width: 100%;
    padding: 0.75rem;
    background: transparent;
    border: 2px solid var(--text-primary);
    color: var(--text-primary);
    font-size: 1rem;
    transition: all 0.3s ease;
  }

  .form-input:focus {
    outline: none;
    border-color: var(--icons);
  }

  .submit-btn {
    width: 100%;
    padding: 1rem;
    background: transparent;
    border: 2px solid var(--text-primary);
    color: var(--text-primary);
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.3s ease;
    text-transform: uppercase;
  }

  .submit-btn:hover {
    background: var(--text-primary);
    color: var(--background);
  }

  .contact-info {
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 2px solid var(--text-primary);
  }

  .social-links {
    display: flex;
    flex-direction: row;
    justify-content: space-evenly;
    align-items: center;    
    padding: 0 2rem;
  }

  .info-item {
    display: flex;
    align-items: center;
  }

  .info-item a {
    display: flex;
    align-items: center;
    gap: 1rem;
    color: var(--text-primary);
    text-decoration: none;
    transition: all 0.3s ease;
    padding: 0.5rem;
    border: 1px solid transparent;
  }

  .info-item a:hover {
    transform: ;
  }

  .contact-icon {
    fill: var(--icons);
  }

  @media (max-width: 768px) {
    .contact-container {
      margin: 1rem;
      padding: 1rem;
    }

    .contact-header h1 {
      font-size: 2rem;      
    }

    .social-links {
      padding: 0 1rem;
    }

    .social-links .info-item {
      transition: all 0.3s ease;
    }

    .social-links .info-item:hover {
      transform: scale(1.1);
    }
  }
</style> 