---
import Layout from '../../layouts/Layout.astro';
import BackButton from '../../components/BackButton.astro';
const skillCategories = [
  {
    categoria: "Lenguajes de Programación",
    skills: [
      { nombre: "JavaScript", icon: "devicon-javascript-plain" },
      { nombre: "TypeScript", icon: "devicon-typescript-plain" },
      { nombre: "C#", icon: "devicon-csharp-plain" },
      { nombre: "Java", icon: "devicon-java-plain" },
    ]
  },
  {
    categoria: "Stack MERN",
    skills: [
      { nombre: "MongoDB", icon: "devicon-mongodb-plain" },
      { nombre: "Express", icon: "devicon-express-original" },
      { nombre: "React", icon: "devicon-react-original" },
      { nombre: "Node.js", icon: "devicon-nodejs-plain" },
    ]
  },
  {
    categoria: "Desarrollo Web",
    skills: [
      { nombre: "HTML5", icon: "devicon-html5-plain" },
      { nombre: "CSS3", icon: "devicon-css3-plain" },
      { nombre: ".NET", icon: "devicon-dot-net-plain" },
    ]
  },
  {
    categoria: "Bases de Datos",
    skills: [
      { nombre: "MongoDB", icon: "devicon-mongodb-plain" },
      { nombre: "SQL", icon: "devicon-mysql-plain" },
    ]
  },
  {
    categoria: "Diseño",
    skills: [
      { nombre: "Figma", icon: "devicon-figma-plain" },
      { nombre: "UML", icon: "fa-solid fa-diagram-project" },
    ]
  },
  {
    categoria: "Frameworks y Librerías",
    skills: [
      { nombre: "Material UI", icon: "devicon-materialui-plain" },
      { nombre: "Bootstrap", icon: "devicon-bootstrap-plain" },
      { nombre: "Tailwind CSS", icon: "devicon-tailwindcss-plain" },
      { nombre: "Shadcn UI", icon: "fa-solid fa-palette" },
    ]
  },
];
---

<Layout title="Mis Skills">
  <BackButton />
  <div class="skills-container">
    <h2>Mis Skills.</h2>
    <div class="categories-grid">
      {skillCategories.map((category) => (
        <div class="category-card">
          <h2>{category.categoria}</h2>
          <div class="skills-grid">
            {category.skills.map((skill) => (
              <div class="skill-item">
                <i class={skill.icon}></i>
                <span>{skill.nombre}</span>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</Layout>

<style>
  .skills-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 5rem;
  }

  h1 {
    text-align: center;
    margin-bottom: 3rem;
    font-size: 2.5rem;
  }

  .categories-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .category-card {
    border: 2px solid var(--text-primary);
    padding: 2rem;
    transition: transform 0.3s ease;
    margin-top: 2rem;
  }

  .category-card:hover {
    transform: translateY(-5px);
  }

  .category-card h2 {
    color: var(--icons);
    font-size: 1.25rem;
    margin-bottom: 1.5rem;
    text-align: center;
  }

  .skills-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }

  /* Para grids con número impar de items */
  .skills-grid:has(:nth-child(odd):last-child) > :last-child {
    grid-column: 1 / -1;
    width: 50%;
    margin: 0 auto;
  }

  .skill-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem;
    transition: background-color 0.3s ease;
  }

  .skill-item:hover {
    background-color: var(--border);
  }

  .skill-item i {
    font-size: 2rem;
    color: var(--text-primary);
  }

  .skill-item span {
    font-size: 0.9rem;
    color: var(--text-primary);
    text-align: center;
  }

  @media (max-width: 768px) {
    .skills-container {
      padding: 1rem;
    }

    .categories-grid {
      grid-template-columns: 1fr;
    }

    .skills-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    /* Mantener el centrado en móvil */
    .skills-grid:has(:nth-child(odd):last-child) > :last-child {
      width: 75%;
    }

    .category-card:hover {
      transform: none;
    }
  }
</style>